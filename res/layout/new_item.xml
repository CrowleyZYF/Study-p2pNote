<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/banner_bg">
        
        <ImageButton 
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true" 
        	android:layout_marginLeft="15dp"/>
        
        <TextView 
            android:id="@+id/main_tab_banner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_item_title"
            android:textSize="25sp"
            android:textColor="#ffffff"
			android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/tab_bg"
        android:layout_alignParentBottom="true">
        
        <ImageView 
            android:id="@+id/tab_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/tab_line"
            />
        
        <LinearLayout 
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            
            <LinearLayout 
	            android:id="@+id/tab_index"
	            android:orientation="vertical"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            >
	            
	            <TextView 
	                android:id="@+id/new_item_sure"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_horizontal|center_vertical"
		            android:text="@string/sure"
		            android:textSize="20sp"
		            android:textColor="@color/tab_text_chosen"/>            
	            
	        </LinearLayout>
	        
            <ImageView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@drawable/new_item_line"/>
	        
	        <LinearLayout 
	            android:id="@+id/tab_water"
	            android:orientation="vertical"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            >
	            
	            <TextView 
	                android:id="@+id/new_item_cancel"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_horizontal|center_vertical"
		            android:text="@string/cancel"
		            android:textSize="20sp"
		            android:textColor="@color/light_black"/>           
	            
	        </LinearLayout>        
            
        </LinearLayout>        
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/content"
        android:orientation ="vertical"
        android:layout_above="@id/tab"
        android:layout_below="@id/banner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
                >
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/new_item_info01"
                    android:gravity="center_vertical|left"/>
                
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    >
                    
                    <RelativeLayout 
                        android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
                        >
                        
                        <TextView 
                            android:layout_width="match_parent"
	                    	android:layout_height="match_parent"
                            android:text="陆金所"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            
                            />                        
                    </RelativeLayout>
                    
                    <ImageView 
			            android:id="@+id/tab_line1"
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/tab_line"
			            android:layout_alignParentBottom="true"
			            />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
                >
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/new_item_info02"
                    android:gravity="center_vertical|left"/>
                
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    >
                    
                    <RelativeLayout 
                        android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
                        >
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:text="富赢人生（P2P）" />
                        
                    </RelativeLayout>
                    
                    <ImageView 
			            android:id="@+id/tab_line1"
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/tab_line"
			            android:layout_alignParentBottom="true"
			            />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
                >
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/new_item_info03"
                    android:gravity="center_vertical|left"/>
                
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    >
                    
                    <RelativeLayout 
                        android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
                        >
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:text="100,000元" />
                        
                    </RelativeLayout>
                    
                    <ImageView 
			            android:id="@+id/tab_line1"
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/tab_line"
			            android:layout_alignParentBottom="true"
			            />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
                >
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/new_item_info04"
                    android:gravity="center_vertical|left"/>
                
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    >
                    
                    <RelativeLayout 
                        android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
                        >
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:text="5%~8%" />
                        
                    </RelativeLayout>
                    
                    <ImageView 
			            android:id="@+id/tab_line1"
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/tab_line"
			            android:layout_alignParentBottom="true"
			            />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
                >
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/new_item_info05"
                    android:gravity="center_vertical|left"/>
                
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    >
                    
                    <RelativeLayout 
                        android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
                        >
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:text="XXXXX" />
                        
                    </RelativeLayout>
                    
                    <ImageView 
			            android:id="@+id/tab_line1"
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/tab_line"
			            android:layout_alignParentBottom="true"
			            />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
                >
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/new_item_info06"
                    android:gravity="center_vertical|left"/>
                
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    >
                    
                    <RelativeLayout 
                        android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
                        >
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:text="2014-11-15" />
                        
                    </RelativeLayout>
                    
                    <ImageView 
			            android:id="@+id/tab_line1"
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/tab_line"
			            android:layout_alignParentBottom="true"
			            />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
                >
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/new_item_info07"
                    android:gravity="center_vertical|left"/>
                
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    >
                    
                    <RelativeLayout 
                        android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
                        >
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:text="2014-11-20" />
                        
                    </RelativeLayout>
                    
                    <ImageView 
			            android:id="@+id/tab_line1"
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/tab_line"
			            android:layout_alignParentBottom="true"
			            />
                </RelativeLayout>
            </LinearLayout>
            
            
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/tab_bg"
            ></LinearLayout>
    </LinearLayout>
</RelativeLayout>
